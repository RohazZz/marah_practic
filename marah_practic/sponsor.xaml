                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="+" Width="39" Height="35" Canvas.Left="686" Canvas.Top="363" FontSize="22" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBox Canvas.Left="561" TextWrapping="Wrap" FontSize="24" Text="50" Canvas.Top="363" Width="120" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" TextAlignment="Center" />
            <Button x:Name="pay_button" Content="Заплатить" Width="103" Height="34" Canvas.Left="518" Canvas.Top="410" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Click="pay_button_Click">
