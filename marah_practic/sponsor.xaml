            <TextBlock FontSize="20" Foreground="Black" TextWrapping="WrapWithOverflow" TextAlignment="Right" Margin="10,298,634,204" Text="Карта:"/>
            <TextBlock FontSize="20" Foreground="Black" TextWrapping="WrapWithOverflow" TextAlignment="Right" Margin="10,331,634,171" Text="Номер карты#:"/>
            <TextBlock FontSize="20" Foreground="Black" TextWrapping="WrapWithOverflow" TextAlignment="Right" Margin="10,363,634,139" Text="Срок действия:"/>
            <TextBlock FontSize="20" Foreground="Black" TextWrapping="WrapWithOverflow" TextAlignment="Right" Margin="10,395,634,107" Text="CVC:"/>
