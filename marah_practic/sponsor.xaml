            <TextBox Canvas.Left="226" FontSize="18" Foreground="#FF9C9999" Text="2017" Canvas.Top="364" Width="60" Height="25" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <TextBlock FontSize="24" Foreground="#FF9C9999" TextWrapping="WrapWithOverflow" TextAlignment="Center" Canvas.Left="312" Canvas.Top="61"><Run Text="Спонсор бегуна"/></TextBlock>
            <TextBlock FontSize="18" Foreground="#FF9C9999" TextWrapping="WrapWithOverflow" TextAlignment="Center" Canvas.Left="67" Canvas.Top="98" HorizontalAlignment="Left" VerticalAlignment="Center"><Run Text="Пожалуйста, выберите бегуна, которого вы хотели бы спонсировать и сумму,&#x0a; которую вы хотели бы спонсировать. Спасибо за вашу поддержку бегунов и их&#x0a; благотворительных учреждений."/></TextBlock>
            <TextBlock FontSize="20" Foreground="#FF9C9999" TextWrapping="WrapWithOverflow" TextAlignment="Center" Margin="65,198,447,304" FontWeight="Bold" Text="Информация о Спонсоре"/>
            <TextBlock FontSize="20" Foreground="#FF9C9999" TextWrapping="WrapWithOverflow" TextAlignment="Center" FontWeight="Bold" Text="Благотворительность" Canvas.Left="509" Canvas.Top="198"/>
            <TextBlock FontSize="20" Foreground="Black" TextWrapping="WrapWithOverflow" TextAlignment="Center" Text="Фонд кошек" Canvas.Left="558" Canvas.Top="235" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock FontSize="20" Foreground="#FF9C9999" TextWrapping="WrapWithOverflow" TextAlignment="Center" FontWeight="Bold" Text="Сумма пожертвования" Canvas.Left="501" Canvas.Top="280"/>
