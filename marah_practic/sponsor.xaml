                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Отмена" Width="103" Height="34" Canvas.Left="626" Canvas.Top="410" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Click="back_button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBox Canvas.Left="174" FontSize="18" Foreground="#FF9C9999" Text="Ваше имя" Canvas.Top="238" Width="224" Height="25" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ComboBox Canvas.Left="174" FontSize="18" Foreground="#FF9C9999" Canvas.Top="270" Width="224" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top"/>
