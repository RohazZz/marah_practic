<Window x:Class="marah_practic.DopInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:marah_practic"
        mc:Ignorable="d"
        Title="DopInfo" Height="570" Width="820">
    <Grid>
        <Canvas>
            <Border Height="95" Width="860" Background="#FF6F6D6D" HorizontalAlignment="Center" Canvas.Left="-40" VerticalAlignment="Top" Canvas.Top="-51"/>
            <Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Width="81" Height="24" Canvas.Left="10" Canvas.Top="10" FontSize="14" Click="logout_button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock FontSize="18" Foreground="White" Canvas.Left="137" Canvas.Top="10" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Width="227">MARATHON SKILL 2016</TextBlock>
            <Button x:Name="logout_button" Content="Logout" HorizontalAlignment="Center" VerticalAlignment="Top" Width="81" Height="24" Canvas.Left="709" Canvas.Top="10" FontSize="14" Click="logout_button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock FontSize="24" Foreground="#FF9C9999" Canvas.Left="247" Canvas.Top="78" HorizontalAlignment="Center" VerticalAlignment="Center" Height="39" TextWrapping="WrapWithOverflow" TextAlignment="Center" Width="286">Подробная информация</TextBlock>
            <Button x:Name="aboutMarathon_button" Content="Marathon Skills 2016" HorizontalAlignment="Left" VerticalAlignment="Center" Width="272" Height="81" Canvas.Left="92" Canvas.Top="136" FontSize="22" FontStyle="Italic" Click="aboutMarathon_button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="howLongMarathon" Content="Насколько долгий&#x0a;        марафон"  HorizontalAlignment="Left" VerticalAlignment="Center" Width="273" Height="81" Canvas.Left="440" Canvas.Top="136" FontSize="22" FontStyle="Italic" Click="howLongMarathon_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="prevResults_button" Content="Предыдущие&#x0a;результаты"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="273" Height="81" Canvas.Left="91" Canvas.Top="227" FontSize="22" FontStyle="Italic" Click="prevResults_button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="allCharities_button" Content="           Список&#x0a;благотворительных&#x0a;      организаций" HorizontalAlignment="Left" VerticalAlignment="Top" Width="273" Height="81" Canvas.Left="440" Canvas.Top="227" FontSize="20" FontStyle="Italic" Click="allCharities_button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Border Height="68" Width="995" Canvas.Top="484" Background="Gray" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="-117"/>
            <TextBlock Canvas.Left="197" Canvas.Top="497" FontSize="18" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top">18 дней 8 часов и 17 минут до старта марафона!</TextBlock>
            <Button Content="BMI калькулятор" Width="273" Height="81" Canvas.Left="91" Canvas.Top="319" FontSize="22" FontStyle="Italic" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <GroupBox Visibility="Hidden" x:Name="ContactPage" Height="350" Width="450" Background="White" Canvas.Left="175" Canvas.Top="65">
                <Canvas>
                    <TextBlock FontSize="32" Canvas.Left="151" Canvas.Top="10" >Контакты</TextBlock>
                    <TextBlock FontSize="18" HorizontalAlignment="Left" Canvas.Top="81" VerticalAlignment="Top" Canvas.Left="10"><Run Text="Для получения дополнительной информации"/><LineBreak/><Run Text="пожалуйста свяжитесь с координаторами"/></TextBlock>
                    <TextBlock FontSize="18" FontWeight="Bold" Canvas.Top="148" Canvas.Left="10" HorizontalAlignment="Center" VerticalAlignment="Top"><Run Text="Телефон:"/></TextBlock>
                    <TextBlock FontSize="18" Canvas.Top="148" Canvas.Left="95" HorizontalAlignment="Left" VerticalAlignment="Center"><Run Text="+55 11 9988 7766"/></TextBlock>
                    <TextBlock FontSize="18" Canvas.Top="192" Canvas.Left="69" HorizontalAlignment="Left" VerticalAlignment="Center"><Run Text="coordinators@marathonskills.org"/></TextBlock>
                    <TextBlock FontSize="18" FontWeight="Bold" Canvas.Top="192" Canvas.Left="10" HorizontalAlignment="Center" VerticalAlignment="Top" Text="Email:"/>
                </Canvas>
            </GroupBox>
            <Button Content="BMR калькулятор" Width="273" Height="81" Canvas.Left="440" Canvas.Top="319" FontSize="22" FontStyle="Italic" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="#FFEDEDED" BorderBrush="LightGray" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Canvas>
    </Grid>
</Window>
