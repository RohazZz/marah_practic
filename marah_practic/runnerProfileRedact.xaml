            <TextBlock FontSize="18" Canvas.Left="-14" Canvas.Top="302" Height="29" TextWrapping="WrapWithOverflow" TextAlignment="Right" Width="160" HorizontalAlignment="Center" VerticalAlignment="Top"><Run Language="ru-ru" Text="Страна"/><Run Text=":"/></TextBlock>
            <TextBlock FontSize="18" Foreground="#FF9C9999" Canvas.Left="170" Canvas.Top="132" Height="30" TextWrapping="WrapWithOverflow" TextAlignment="Center" Width="210" HorizontalAlignment="Left" VerticalAlignment="Center"><Run Language="ru-ru" Text="the.email@address.com"/></TextBlock>
